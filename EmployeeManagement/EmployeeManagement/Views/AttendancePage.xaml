<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagement.Views.AttendancePage"
             Title="ATTENDANCE">
    <ContentPage.Content>
        <StackLayout Margin="30,80,30,0">
            <Label Text="{Binding username}"></Label>
            <StackLayout Orientation="Horizontal">
                <Label Text="Select Date" FontSize="23" TextColor="Black" HorizontalOptions="FillAndExpand"></Label>
                <DatePicker x:Name="Date"  FontSize="Large"  >
                </DatePicker>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Start Time"  FontSize="23" TextColor="Black" HorizontalOptions="FillAndExpand"></Label>
                <TimePicker x:Name="StartTime" Time="{Binding StartTime}" FontSize="Large" ></TimePicker>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="End Time" FontSize="23" TextColor="Black" HorizontalOptions="FillAndExpand"></Label>
                <TimePicker x:Name="EndTime" Time="{Binding EndTime}" FontSize="Large" ></TimePicker>
            </StackLayout>
            <Button Text="Submit" FontSize="18" Margin="0,40,0,0" CornerRadius="10" FontAttributes="Bold" Command="{Binding AttendanceSubmit}" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>