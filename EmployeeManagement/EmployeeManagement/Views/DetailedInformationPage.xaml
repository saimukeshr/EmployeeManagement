<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagement.Views.DetailedInformationPage"
             Title="{Binding Name}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Name}"></Label>
            <Label Text="{Binding Status}"></Label>
            <Label Text="{Binding TimeIn}"></Label>
            <Label Text="{Binding TimeOut}"></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>