<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagement.Views.TeamsInformationPage"
            >
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Button Text="Purchase Team" BorderColor="Black" BackgroundColor="Transparent" WidthRequest="280" HeightRequest="60" FontAttributes="Italic" FontSize="20" BorderWidth="4" CornerRadius="14" Margin="15,10" Command="{Binding PurchaseteamCommand}" ></Button>
        <Button Text="Sales Team" BorderColor="Black" BackgroundColor="Transparent" WidthRequest="280" HeightRequest="60" FontAttributes="Italic" FontSize="20" BorderWidth="4" CornerRadius="14" Margin="15,10" Command="{Binding SalesteamCommand}" ></Button>
    </StackLayout>
    
    

</ContentPage>